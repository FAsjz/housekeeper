<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    
    >
   
    
    <sjz.feicui.contacts.view.HomePieCharts 
        android:id="@+id/homepiecharts"
        android:layout_centerInParent="true"
	    android:layout_width="170dp"
	    android:layout_height="170dp"/>
	    
    
    <View 
        android:id="@+id/home_clean"
        android:layout_centerInParent="true"
	    android:layout_width="150dp"
	    android:layout_height="150dp"
	    android:background="@drawable/home_view"
	    android:onClick="clean"
	    />
    <TextView 
        android:id="@+id/home_tv1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_alignTop="@id/home_clean"
        android:layout_height="wrap_content"
        android:text="19"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_marginTop="38dp"/>
    <TextView 
        android:id="@+id/home_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/home_tv1"
        android:layout_alignBottom="@id/home_tv1"
        android:text="%"
        android:layout_marginBottom="5dp"
        android:textSize="20sp"/>

    <TextView 
        android:id="@+id/home_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/home_tv1"
        android:text="手机加速"
        android:onClick="clean"
        android:textColor="@color/white"
        android:background="@drawable/home_tv"
        android:textSize="20sp"/>
</RelativeLayout>
