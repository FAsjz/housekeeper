<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp" 
    >

    <ImageView
        android:id="@+id/iv_actionbar_left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
         android:layout_centerVertical="true"
        android:layout_margin="@dimen/home_actionbar_image_margin"
        android:background="@drawable/home_entry_item"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_actionbar_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="25sp"
        android:layout_margin="@dimen/home_actionbar_text_margin"
        android:text="手机管家" />

    <ImageView
        android:id="@+id/iv_actionbar_right"
         android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/home_actionbar_image_margin"
        android:background="@drawable/home_entry_item"
        android:src="@drawable/setting_logo" />

</RelativeLayout>