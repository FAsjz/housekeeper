<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
     >
    <ImageView
        android:id="@+id/phone_ckeck_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY" 
        android:src="@drawable/android_loding"/>

    <TextView
        android:singleLine="true"
        android:id="@+id/phone_ckeck_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/phone_ckeck_iv"
        android:layout_toRightOf="@id/phone_ckeck_iv"
        android:textSize="15sp"
        android:text="系统软件"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phone_ckeck_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/phone_ckeck_iv"
        android:layout_toRightOf="@id/phone_ckeck_iv"
        android:text="包名"
        android:textSize="10sp" />

</RelativeLayout>
