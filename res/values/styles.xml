<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- 通讯录大全 -->
    <style name="tel_showtext">
        <item name="android:background">#FF009ACD</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/tel_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tel_show_textsize</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- home界面样式 -->
    <style name="home_TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">dump</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/home_entry_item</item>
    </style>
    <!-- 清理垃圾 -->
    <style name="clean_item_left">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">24sp</item>
		<item name="android:id">@+id/clean_item_left</item>
    </style>
    
    <style name="clean_item_size">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignBottom">@id/clean_item_left</item>
		<item name="android:layout_toRightOf">@id/clean_item_left</item>
		<item name="android:layout_marginLeft">20dp</item>
		<item name="android:text">18.23G</item>
		<item name="android:textSize">18sp</item>
    </style>
     <style name="clean_item_iv">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_centerVertical">true</item>
    </style>
    <style name="clean_item_rl">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/home_entry_item</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:padding">20dp</item>
		<item name="android:clickable">true</item>
		<item name="android:onClick">toNextActivity</item>
		 
    </style>
    <!-- 文件管理list文字样式 -->
    <style name="filemgr_item_left">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">24sp</item>
		<item name="android:id">@+id/filemgr_item_left</item>
    </style>
    <style name="filemgr_item_rl">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/home_entry_item</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:padding">20dp</item>
		<item name="android:clickable">true</item>
		<item name="android:onClick">toNextActivity</item>
		 
    </style>
    <style name="filemgr_item_size">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignBottom">@id/filemgr_item_left</item>
		<item name="android:layout_toRightOf">@id/filemgr_item_left</item>
		<item name="android:layout_marginLeft">20dp</item>
		<item name="android:text">18.23G</item>
		<item name="android:textSize">18sp</item>
    </style>
    <style name="filemgr_item_iv">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:src">@drawable/ic_arrows_right</item>
    </style>
    
    
    <!-- setting界面文字样式 -->
    <style name="setting_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- setting界面箭头图片样式 -->
    <style name="setting_ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <!-- setting界面ToggleButton -->
    <style name="setting_ToggleButton" parent="setting_ImageView">
        <item name="android:textOn">""</item>  
    	<item name="android:textOff">""</item> 
    	<item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item> 
        <item name="android:background">@drawable/setting_togglebutton</item>
    </style>
</resources>